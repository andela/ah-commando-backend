{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "export NODE_ENV=production && DEBUG=dev && nodemon --exec babel-node server/index.js",
    "debug": "export DEBUG=dev && nodemon --exec babel-node server/index.js --inspect",
    "clean": "rm -rf build && mkdir build && npm run copy-docs",
    "build": "npm run clean && npm run migrate && babel -d ./build ./server",
    "test": "export NODE_ENV=test && nyc mocha --require @babel/register server/tests --exit",
    "pretest": "export NODE_ENV=test && npm run migrate:undo && npm run migrate",
    "generate:model": "node_modules/.bin/sequelize model:generate",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "migrate:undo": "node_modules/.bin/sequelize db:migrate:undo:all",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "copy-docs": "cp -r server/docs/ build/docs/"
  },
  "nyc": {
    "exclude": [
      "server/helpers/passport.js"
    ]
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cors": "^2.8.4",
    "debug": "^4.1.1",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.1",
    "node-cron": "^2.0.3",
    "passport": "^0.4.0",
    "passport-custom": "^1.0.5",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.10.2",
    "sequelize-cli": "^5.5.0",
    "swagger-ui-express": "^4.0.7",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.5",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^10.0.6",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint --fix",
      "git add"
    ]
  }
}
